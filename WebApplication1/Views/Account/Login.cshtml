@using WebApplication1.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
}
<form asp-action="Login" class="auth__form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group auth__req">
        <input  placeholder="Ваш e-mail адресс" asp-for="EmailAddress" class="form-control auth__input input">
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group auth__req">
        <input placeholder="Ваш пароль"  asp-for="Password" class="form-control auth__input input" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group auth__btn">
        <button class="btn" type="submit" value="" > Войти</button>
    </div>
</form>
