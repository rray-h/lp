@using WebApplication1.Models;
@using WebApplication1.ViewModels
@model Query
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (User.Identity.IsAuthenticated){
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <section class="text-center">
        <div class="container">
            <h1>Задание:</h1>

                <p>
                    <a href="#" class="btn primary m-2">Название: @Model.Name </a>
                    <a href="#" class="btn primary m-2">Модель: @Model.Model </a>
                    <a href="#" class="btn primary m-2">Описание: @Model.Description </a>
                    <a href="#" class="btn primary m-2">Телефон: @Model.PhoneNumber </a>
                    <a href="#" class="btn primary m-2">Скорость: @Model.IsItQuick </a>
                    <a href="#" class="btn primary m-2">Статус: @Model.QueryStatus </a>
                    @if (@Model.QueryStatus != "Требуется фрилансер")
                    {
                    <a href="#" class="btn primary m-2">Фрилансер: @Model.FreelancerID </a>
                    }
                    </p>                   
        </div>
    </section>
    if (User.IsInRole("freelancer"))
    {
        <div>
            <form method="post" asp-action="Detail">
                <button type="submit">Выполнить</button> 
            </form>
        </div>
    }

}else{
     <h2>Пожалуйста войдите в аккаунт</h2>
}