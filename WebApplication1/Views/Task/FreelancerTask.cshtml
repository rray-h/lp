@model IEnumerable<Query>
@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "TaskList";
}
@if (User.IsInRole("freelancer"))
{
    <section class="text-center">
        <div class="container">
            @foreach (var item in Model)
            {
                <p>
                    <a href="#" class="btn primary m-2">Проблема: @item.Problem </a>
                    <a href="#" class="btn primary m-2">Срочность: @item.IsItQuick </a>
                    <a href="#" class="btn primary m-2">Статус: @item.QueryStatus </a>
                    <a asp-controller="Task" asp-action="Detail" asp-route-id="@item.Id" type="button">Detail</a>
                </p>
            }
        </div>
    </section>
}
else
{
    <h2>Вы должны быть фрилансером для входа</h2>
}